{
  "manifest_version": 3,
  "name": "Prompt Pile",
  "version": "1.0",
  "description": "A web extension for storing and organizing AI prompts.",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Open Prompt Pile"
  },

  "permissions": [
    "storage",       
    "contextMenus",
    "clipboardWrite"
  ],

  "host_permissions": [
    "<all_urls>" 
  ]
}